@page "/"
@inject IRecipeService recipeService

<div class="row">

    @if (RecipeObjects.Count > 0)
    {
        foreach (var item in RecipeObjects)
        {

            <div class="col-auto mt-3">
                <a href="readrecipe/@item.Id" style="text-decoration:none;">
                    <div class="card">
                        <div class="card-header fw-bold h6 text-light bg-primary">@item.RecipeName</div>
                        <div class="card-body">
                            <img class="card-img-top" src="@item.GeneralImage" width="300" height="300" />
                        </div>
                        <div class="card-footer">
                            <ul class="list-group list-group-horizontal-sm text-center" style="list-style:none;">
                                <li class="list-group-item-action"><i class="oi oi-thumb-up"></i></li>
                                <li class="list-group-item-action"><i class="oi oi-share-boxed text-primary"></i></li>
                                <li class="list-group-item-action"><i class="oi oi-arrow-circle-bottom"></i></li>
                            </ul>
                        </div>
                    </div>
                </a>
            </div>

        }
    }


</div>


@code
{
    private List<RecipeModel> RecipeObjects { get; set; } = new();
    protected override async Task OnInitializedAsync()
    {
        RecipeObjects = await recipeService.GetRecipesAsync();
    }
}

